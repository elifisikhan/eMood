@model ActivityListModel

<!--Cinemas-->
<div id="carouselcinema" class="carousel slide" data-ride="carousel">
    <div class="container">
        <p class="display-4">Sinemalar </p>
    </div>
    <div class="carousel-inner">
        @{ int m = 0;}
        @foreach (var item in Model.ActivityAttributes)
        {
            if (item.ActivityID == 1 && !string.IsNullOrEmpty(item.Image))
            {
                if (m == 0)
                {
                    <div class="carousel-item active">
                        <div class="container">
                            <img src="~/theme/img/@item.Image" class="d-block w-100" />
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@item.AttributeName</h5>
                                <p>@item.Description</p>
                                <p>@item.Rate</p>
                            </div>
                        </div>
                    </div>
                    m++;
                }
                else
                {
                    <div class="carousel-item">
                        <div class="container">
                            <img src="~/theme/img/@item.Image" class="d-block w-100" />
                            <div class="carousel-caption d-none d-md-block">
                                <h5>@item.AttributeName</h5>
                                <p>@item.Description</p>
                            </div>
                        </div>
                    </div>
                    m++;
                }
            }
        }
    </div>
    <ol class="carousel-indicators">
        <li data-target="#carouselcinema" data-slide-to="0" class="active"></li>
        @for (int e = 1; e < m; e++)
        {
            <li data-target="#carouselcinema" data-slide-to="@e"></li>
        }
    </ol>
    <a class="carousel-control-prev" href="#carouselcinema" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselcinema" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
